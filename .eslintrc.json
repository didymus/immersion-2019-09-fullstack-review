{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
    }],
    "import/extensions": ["error", {
      "jsx": "always",
      "json": "always"
    }],
    "react/jsx-one-expression-per-line": 0,
    "space-before-function-paren": ["error", "never"],
    "camelcase": 1,
    "class-methods-use-this": 0
  }
}